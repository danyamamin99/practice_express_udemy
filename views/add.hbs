<h1>Добавить новый курс</h1>
<form action="/add" method="POST">
  <div class="input-field">
    <input placeholder="Название курса" id="title" name="title" type="text" class="validate" required>
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>
  <div class="input-field">
    <input placeholder="Цена курса" id="price" name="price" type="number" class="validate" required>
    <label for="price">Цена курса</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>
  <div class="input-field">
    <input placeholder="URL картинки" id="url" name="img" type="text" class="validate" required>
    <label for="url">URL картинки</label>
    <span class="helper-text" data-error="Введите url картинки"></span>
  </div>
  <button class="btn btn-primary">Добавить</button>
</form>